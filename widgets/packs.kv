#:kivy 2.2.1
#:import utils kivy.utils

<PackWin>:
    GridLayout:
        #size_hint: self.width, self.height
        cols:1
        Button:
            md_bg_color:utils.get_color_from_hex('#B1CCC3') 
            font_size: 25
            color: utils.get_color_from_hex('#224238')
            text: 'Gold'
            pack_selection: 'gold'
            on_release: root.button_press('gold')
        Button:
            pack_selection: 'silver'
            text: 'Silver'
            on_release: root.button_press('silver')
        Button:
            text: 'Bronze'
            pack_selection: 'bronze'
            on_release: root.button_press('bronze')

<PackResult>:
    GridLayout:
        cols:1
        MDLabel: 
            id: result_pack
            text: root.parent.manager.pack
        # MDLabel:
        #     text: root.selection_pack(app.sm_sub.get_screen('packs').ids.selection)