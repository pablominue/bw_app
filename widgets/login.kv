#:kivy 2.2.1
#:import utils kivy.utils

<SigninWin>:
    username: username
    email: email
    password: password
    GridLayout:
        cols: 1
        size: root.width - 50, root.height -50
        pos: 25,25
        GridLayout:
            cols: 2
            MDLabel:
                text: "Introduce User Name:"
            TextInput:
                id: username
                multinline: False
            MDLabel:
                text: "Introduce Email:"
            TextInput:
                id: email
                multinline: False
            MDLabel:
                text: "Introduce Password"
            TextInput:
                id: password
                password: True
                multiline: False


        Button:
            text: "Submit"
            on_press: root.on_press()

<LoginWin>:
    lg_username: lg_username
    lg_password: lg_password
    GridLayout:
        background_color: (0.01, 0.75, 0.95, 0.2) 
        cols: 1
        size: root.width - 50, root.height -50
        pos: 25,25
        GridLayout:
            color: (0.01, 0.75, 0.95, 0.2) 
            cols: 1
            MDLabel:
                md_bg_color:utils.get_color_from_hex('#B1CCC3') 
                halign: 'center'
                valign: 'center'
                markup: True
                font_size: 25
                color: utils.get_color_from_hex('#224238')
                rgb: utils.get_color_from_hex('#224238')
                pos_hint: self.width/2, self.height/2
                text: "[b]User[/b]"
            TextInput:
                id: lg_username
                background_color: utils.get_color_from_hex('#42826D')
                foreground_color: utils.get_color_from_hex('#B1CCC3') 
                valign: 'center'
                halign: 'center'
                size_hint: (1, None)
                height: self.minimum_height
                multinline: False
                # size_hint: (5,0.5)
            MDLabel:
                md_bg_color:utils.get_color_from_hex('#B1CCC3') 
                halign: 'center'
                valign: 'center'
                markup: True
                font_size: 25
                color: utils.get_color_from_hex('#224238')
                rgb: utils.get_color_from_hex('#224238')
                pos_hint: self.width/2, self.height/2
                text: "[b]Password[/b]"
            TextInput:
                id: lg_password
                background_color: utils.get_color_from_hex('#42826D')
                foreground_color: utils.get_color_from_hex('#B1CCC3') 
                valign: 'center'
                halign: 'center'
                password: True
                size_hint: (1, None)
                height: self.minimum_height
                pos_hint: (0, 0)
                pos: (0,0)
                multiline: False

        Button:
            text: "Login"
            background_color: (0.01, 0.75, 0.95, 0.7) 
            size:(32, 32)
            size_hint:(1, .2)
            pos:(300, 250)
            on_press: root.on_press()
        
        Button:
            text: "Sign In"
            background_color: (0.01, 0.95, 0.75, 0.7) 
            size:(32, 32)
            size_hint:(.2, .2)
            pos:(300, 250)
            on_press: root.signin()